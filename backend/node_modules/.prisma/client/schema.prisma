// Cr√©er le dossier prisma puis le fichier
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  imageUrl     String
  projectUrl   String
  githubUrl    String?
  technologies String // ex: "React, Node.js, Express"
  featured     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Skill {
  id       Int     @id @default(autoincrement())
  name     String
  level    String
  category String
  icon     String?
}
